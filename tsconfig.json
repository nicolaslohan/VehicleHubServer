{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"esModuleInterop": true,
		"types": ["node", "jest"],
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src", "env.ts", "tests"]
}
